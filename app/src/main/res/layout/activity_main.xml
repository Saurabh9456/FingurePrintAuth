<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_one"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_finger_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:src="@drawable/fingerprint"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv_one"
        app:layout_constraintStart_toStartOf="@id/tv_one"
        app:layout_constraintEnd_toEndOf="@id/tv_one"/>

    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/tv_one"
        app:layout_constraintEnd_toEndOf="@id/tv_one"
        app:layout_constraintTop_toBottomOf="@id/img_finger_print"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Login"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_one"
        app:layout_constraintEnd_toEndOf="@id/tv_one"
        app:layout_constraintTop_toBottomOf="@id/tv_two"
        android:layout_marginTop="40dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>